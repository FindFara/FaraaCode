<!-- Navbar STart -->
<header id="topnav" class="defaultscroll sticky">
    <div class="container">
        <!-- Logo container-->
        <div>
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/img/bg/f.png" height="46" alt="">
            </a>
        </div>
        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="buy-button list-inline mb-0">
                    <li class="list-inline-item mb-0">
                        <div class="dropdown">
                            <button type="button" class="btn btn-link text-decoration-none dropdown-toggle p-0 pe-2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="uil uil-search h5 text-muted" ></i>
                            </button>
                            <div class="dropdown-menu dd-menu dropdown-menu-end bg-white shadow rounded border-0 mt-3 py-0" style="width: 300px;">
                                <form asp-controller="Blog" asp-action="Index" method="get">
                                    <input type="text" id="text" name="FilterTitle" class="form-control border bg-white" placeholder="جستجو...">
                                </form>
                            </div>
                        </div>
                    </li>
                    <li class="list-inline-item">
                        <a href="javascript:void(0)" class="btn btn-icon btn-primary"><i class="uil uil-heart"></i></a>
                    </li>
                    <li class="list-inline-item mb-0">
                        <div class="dropdown dropdown-primary">
                            <button type="button" class="btn btn-icon btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="uil uil-user align-middle icons"></i>
                            </button>
                            <div class="dropdown-menu dd-menu dropdown-menu-end bg-white shadow rounded border-0 mt-3 py-3" style="width: 200px; margin: 0px; position: absolute; inset: 0px auto auto 0px; transform: translate(0px, 38px);">
                                <a class="dropdown-item text-dark" asp-area="UserPanels" asp-controller="UserPanelHome" asp-action="Index"><i class="uil uil-user align-middle me-1"></i> حساب کاربری</a>
                                @if (User.Identity.Name == "Admin")
                                {
                                    <a class="dropdown-item text-dark" a asp-area="Admins" asp-controller="Dashboard" asp-action="Index"><i class="uil uil-award align-middle me-1"></i>پنل ادمین</a>
                                }
                                <div class="dropdown-divider my-3 border-top"></div>
                                <a class="dropdown-item text-dark" asp-controller="Account" asp-action="Logout"><i class="uil uil-sign-out-alt align-middle me-1"></i> خروج </a>
                            </div>
                        </div>
                    </li>
                </ul>
            }
            else
            {
                <div class="buy-button">
                    <a asp-controller="Account" asp-action="Login">
                        <div class="btn btn-primary">ورود  </div>
                        
                    </a>
                    <a asp-controller="Account" asp-action="Register">
                        <div class="btn btn-primary"> ثبت نام </div>
                        
                    </a>
                    
                </div>
            }
        </div><!--end login button-->
        <!-- End Logo container-->
        <div class="menu-extras">
            <div class="menu-item">
                <!-- Mobile menu toggle-->
                <a class="navbar-toggle" id="isToggle" onclick="toggleMenu()">
                    <div class="lines">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </a>
                <!-- End mobile menu toggle-->
            </div>
        </div>

        <div id="navigation">
            <!-- Navigation Menu-->
            <ul class="navigation-menu">
                <li ><a asp-area="" asp-controller="Home" asp-action="Index" class="sub-menu-item">صفحه اصلی </a></li>
                 @await Component.InvokeAsync("CourseGroupComponent")
                <li class="has-submenu parent-parent-menu-item"><a asp-area="" asp-controller="Blog" asp-action="Index" class="sub-menu-item">بلاگ</a><span class="menu-arrow"></span></li>
                <li class="has-submenu parent-parent-menu-item"><a asp-area="" asp-controller="Home" asp-action="About" class="sub-menu-item"> درباره ما</a><span class="menu-arrow"></span></li>       
            </ul><!--end navigation menu-->
            <!--end login button-->
        </div><!--end navigation-->
    </div><!--end container-->
</header><!--end header-->
<!-- Navbar End -->
