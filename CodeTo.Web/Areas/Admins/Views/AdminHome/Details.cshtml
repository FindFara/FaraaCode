@model CodeTo.Core.ViewModel.AdminPanel.AdminPanelCreateOrEditViewModel
@using CodeTo.Core.Utilities.Extensions
@{
    ViewData["Title"] = "جزییات کاربر ";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-body" class="col-lg-12 col-sm-12 col-xs-12">
    <div class="col-lg-3 col-sm-3 col-xs-12">
        <div class="widget flat radius-bordered">
            <div class="widget-header bg-blue">
                <span class="widget-caption">آواتار کاربر</span>
            </div>
            <div class="col-lg-12 col-sm-12 col-xs-12 widget-body">
                <form>
                    <div class="">
                        <center>
                            <img src="@Model.AvatarFullName" width="150">
                        </center>

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-sm-9 col-xs-12">
        <div class="widget">
            <div class="widget-header bg-blue">
                <span class="widget-caption">@ViewData["Title"]</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="orders-container">
                <div class="orders-header">
                    <h6>سایر جزییات ...</h6>
                </div>
                <ul class="orders-list">
                    <li class="order-item">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                <div class="item-booker">
                                    <i class="fa fa-user"></i>
                                    @Html.DisplayNameFor(model => model.Id)
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                @Html.DisplayFor(model => model.Id)
                            </div>
                        </div>
                    </li>
                    <li class="order-item">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                <div class="item-booker fa fa-user-md">
                                    @Html.DisplayNameFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                @Html.DisplayFor(model => model.UserName)
                            </div>
                        </div>
                    </li>
                    <li class="order-item">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                <div class="item-booker">
                                    <i class="fa fa-sign-in"> </i>
                                    @Html.DisplayNameFor(model => model.Email)
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                    </li>
                  
                    <li class="order-item">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="item-booker">
                                    <i class="fa fa-calendar"> </i>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                @Html.DisplayFor(model => model.CreateDate)
                            </div>
                        </div>
                    </li>
                    @if (Model.LastModifyDate != null)
                    {
                        <li class="order-item">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <div class="item-booker">
                                        <i class="fa fa-calendar"> </i>
                                        @Html.DisplayNameFor(model => model.LastModifyDate)
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                    @Html.DisplayFor(model => model.LastModifyDate)
                                </div>
                            </div>
                        </li>
                    }
                </ul>
                <div class="col-lg-offset-9">
                    <br />
                    <a asp-area="Admins" asp-controller="AdminHome" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-success">ویرایش</a> |
                    <a asp-area="Admins" asp-controller="AdminHome" asp-action="Index" type="button" class="btn btn-darkorange">برگشت</a>
                </div><br />
            </div>
        </div>
    </div>
</div>

