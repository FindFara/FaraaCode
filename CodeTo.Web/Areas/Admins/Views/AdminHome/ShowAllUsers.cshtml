@using CodeTo.Core.Utilities.Extensions
@model CodeTo.Core.ViewModel.AdminPanel.AdminPanelIndexViewModel
@{//take care about Foreach and watch it carefully
    ViewData["Title"] = "مدیریت کاربران";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";

}
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a asp-area="Admins" asp-controller="AdminHome" asp-action="Index">خانه</a>
        </li>
        <li class="active">@ViewData["Title"]</li>
    </ul>
</div>

<div style="margin: 2%">
    <h2>@ViewData["Title"]</h2>
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">مشاهده همه کاربران</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <a asp-area="Admins" asp-controller="AdminHome" asp-action="AddUserFromAdmin" class="btn btn-success btn-lg edit" style="margin-bottom: 1% "><i class="fa fa-plus-circle white"></i> افزودن</a>

                <div id="editabledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                </div>
                <form asp-area="Admins" asp-action="ShowAllUsers" method="get">
                    <div class="col-sm-5 col-md-5">
                        <input asp-for="UserName" type="text" name="FilterUserName" class="form-control" placeholder="نام کاربری" />
                    </div>
                    <div class="col-sm-5 col-md-5">
                        <input asp-for="Email" type="text" name="FilterEmail" class="form-control" placeholder="ایمیل" />
                    </div>
                    <div class="col-sm-2 col-md-2">
                        <button type="submit" class="btn btn-info"> بگرد <i class="fa fa-search white"></i></button>
                        <a class="btn btn-default btn-md" asp-area="Admins" asp-controller="AdminHome" asp-action="ShowAllUsers">خالی</a>
                    </div>
                </form>
                <br/>
                <table class="table table-striped table-hover table-bordered dataTable no-footer" style="margin-top: 1%" id="editabledatatable" role="grid" aria-describedby="editabledatatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="

                                                : activate to sort column descending" style="width: 188px;">
                                نام کاربری
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="

                                                : activate to sort column ascending" style="width: 288px;">
                                ایمیل
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="

                                                : activate to sort column ascending" style="width: 126px;">
                                تاریخ ثبت نام
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="

                                                : activate to sort column ascending" style="width: 201px;">
                                وضعیت ثبت نام
                            </th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="

                                                " style="width: 336px;">

                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.users)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1">@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.CreateDate.ToShamsi()</td>
                                <td class="center ">
                                    @if (item.IsActived)
                                    {
                                        <p class="text text-success" style="font-size: medium">فعال</p>
                                    }
                                    else
                                    {
                                        <p class="text text-danger" style="font-size: medium">غیر فعال</p>
                                    }

                                </td>
                                <td>
                                    <a asp-area="Admins" asp-controller="AdminHome" asp-action="EditUserFromAdmin" asp-route-id="@item.Id" class="btn btn-info btn-md edit"><i class="fa fa-edit"></i> ویرایش</a>
                                    <a href="#" class="btn btn-danger btn-md delete"><i class="fa fa-trash-o"></i> حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row DTTTFooter">
                    <div class="col-sm-6">

                        <div class="dataTables_info" id="editabledatatable_info" role="status" aria-live="polite" style="font-size: medium">نمایش نتایج صفحه @Model.CurrentPage از تعداد @Model.PageCount</div>
                    </div>
                    <div class="col-sm-6">
                        <div class="dataTables_paginate paging_bootstrap" id="editabledatatable_paginate">
                            <ul class="pagination">

                                @for (int i = 1
                                  ; i <= Model.PageCount; i++)
                                {
                                    <li class="paginate_button @((i==Model.CurrentPage)?"active":"" )"><a href="https://localhost:44384/AP/UsersManagement?pageid=@i">@i</a></li>
                                }


                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

