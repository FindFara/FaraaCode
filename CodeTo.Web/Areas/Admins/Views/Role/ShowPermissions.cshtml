@using CodeTo.Core.Utilities.Extensions
@model List<PermissionIndexViewModel>
@{
    ViewData["Title"] = "نمایش نقش ها";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a asp-area="Admins" asp-controller="AdminHome" asp-action="Index">خانه</a>
        </li>
        <li class="active"><a asp-area="Admins" asp-controller="AdminHome" asp-action="ShowAllUsers">مدیریت نقش ها</a></li>

    </ul>
</div>

<div style="margin: 2%">
    <h2>@ViewData["Title"]</h2>
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">مشاهده همه نقش ها</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <a asp-area="Admins" asp-controller="Role" asp-action="AddRole" class="btn btn-success btn-lg edit" style="margin-bottom: 1% "><i class="fa fa-plus-circle white"></i> افزودن</a>

                <div id="editabledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                </div>
                <form asp-area="Admins" asp-action="ShowPermissions" method="get">
                </form>
                <table class="table table-striped table-hover table-bordered dataTable no-footer" style="margin-top: 1%" id="editabledatatable" role="grid" aria-describedby="editabledatatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="

                                                : activate to sort column descending" style="width: 75%;">
                                نام نقش
                            </th>



                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="

                                                " style="width: 25%;">

                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1">@item.Title</td>
                                <td>
                                    <a asp-area="Admins" asp-controller="Role" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-info btn-md edit"><i class="fa fa-edit"></i> ویرایش</a>
                                    <a asp-area="Admins" asp-controller="Role" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-md delete"><i class="fa fa-trash-o"></i> حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

