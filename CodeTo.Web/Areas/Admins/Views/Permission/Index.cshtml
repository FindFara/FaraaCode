@using CodeTo.Core.Utilities.Extensions
@model IEnumerable<CodeTo.Core.ViewModel.Permission.ShowRoleViewModel>

@{
    ViewData["Title"] = "نقش ها";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<div class="widget-body">
    <a id="editabledatatable_new" asp-area="Admins" asp-controller="Permission" asp-action="Add" class="btn btn-blue">
        افزودن
    </a>
    <div id="editabledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
        <div class="DTTT btn-group">

        </div>

        <table class="table table-striped table-hover table-bordered dataTable no-footer" id="editabledatatable" role="grid" aria-describedby="editabledatatable_info">
            <thead>
                <tr role="row">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 273px;">
                    </th>
                </tr>
            </thead>

            <tbody>

                <tr role="row" class="odd">


                    @foreach (var item in Model)
                    {
                    <tr>
                        <th>
                            @item.Id
                        </th>
                        <th>
                            @item.Name
                        </th>

                        <th>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a asp-area="Admins" asp-controller="Permission" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-warning">ویرایش</a>
                                <a asp-area="Admins" asp-controller="Permission" asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-success">جزـیات</a>
                                <a asp-area="Admins" asp-controller="Permission" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">حذف</a>
                            </div>
                        </th>
                    </tr>
                }
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
