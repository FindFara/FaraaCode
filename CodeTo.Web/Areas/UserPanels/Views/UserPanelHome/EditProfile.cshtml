@model CodeTo.Core.ViewModel.Users.EditProfileViewModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}


<div class="col-lg-8 col-12">
    <div class="card border-0 rounded shadow">
        <div class="card-body">
            <h5 class="text-md-start text-center">جزئیات شخصی :</h5>
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">

                <div class="mt-3 text-md-start text-center d-sm-flex">
                    <img src="@Model.AvatarFullName" class="avatar float-md-left avatar-medium rounded-circle shadow me-md-4" alt="">
                    <div class="mt-md-4 mt-3 mt-sm-0">
                        <input asp-for="AvatarFile" />
                    </div>
                </div>

                <input type="hidden" asp-for="AvatarFile" />
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label" asp-for="UserName"></label>
                            <div class="form-icon position-relative">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user fea icon-sm icons"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                <input asp-for="UserName" type="text" class=" form-control ps-5" placeholder="نام کاربری :">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email"> </label>
                            <div class="form-icon position-relative">
                                <i data-feather="user-check" class="fea icon-sm icons"></i>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail fea icon-sm icons"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                <input asp-for="Email" type="text" class="form-control ps-5" placeholder="نام خانوادگی :">
                            </div>
                        </div>
                    </div>
                    <br />

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" id="submit" name="send" class="btn btn-primary" value="ذخیره تغییرات">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

