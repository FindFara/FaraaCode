@model CodeTo.Core.ViewModel.Articles.ArticleCreateOrEditViewModel
@{

    ViewData["Title"] = (Model.Id == 0 ? "افزودن" : $" ویرایش");
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewData["Title"]</title>
<div class="page-body">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="widget">
            <div class="widget-header bg-palegreen">
                <span class="widget-caption">@(Model.Id == 0 ? "افزودن" : $" ویرایش")</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-group col-lg-6">
                        <label asp-for="ArticleTitle" class="control-label"></label>
                        <input asp-for="ArticleTitle" class="form-control" />
                        <span asp-validation-for="ArticleTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="ArticleFullName" class="control-label"></label>
                        <input asp-for="ArticleImageFile" class="form-control" />
                    </div >
                @*    <div class="form-group col-lg-3">
                        <img id="imgPreview" src="@Model.ArticleFullName" class="img-thumbnail mt-4" width="100" />
                    </div>*@
                    <div class="form-group col-lg-6">
                        <label asp-for="GroupId" class="control-label"></label>
                        <input asp-for="GroupId" class="form-control" />
                        <span asp-validation-for="GroupId" class="text-danger"></span>
                    </div>
                    <div class=" col-lg-6">
                        <label asp-for="Writer" class="control-label"></label>
                        <input asp-for="Writer" class="form-control" />
                        <span asp-validation-for="Writer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="ArticleDescription" class="control-label"></label>
                        <textarea id="ArticleDescription" asp-for="ArticleDescription" class="form-control" rows="6" id="form-field-8" placeholder="Default Text"></textarea>
                        <span asp-validation-for="ArticleDescription" class="text-danger"></span>
                    </div>
                    @if (Model.Id != 0)
                    {
                        <input asp-for="CreateDate" type="hidden" />
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group col-lg-offset-11">
                            <input type="submit" value="Edit" class="btn btn-success" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group col-lg-offset-11">
                            <input type="submit" value="Add" class="btn btn-success" />
                        </div>
                    }

                </form>
            </div>
        </div>
    </div>
</div>
